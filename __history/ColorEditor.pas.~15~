unit ColorEditor;

interface

uses Graphics, ExtCtrls;

// Загрузить свои цвета по умолчанию
procedure LoadColors(aColorListBox: TColorListBox);


implementation




procedure LoadColors(aColorListBox: TColorListBox);
var
  aColor: TColor;
begin
  aColorListBox.Items.Clear;
  aColor := clRed;
  aColorListBox.Items.AddObject('Красный',TObject(aColor));
end;


end.
